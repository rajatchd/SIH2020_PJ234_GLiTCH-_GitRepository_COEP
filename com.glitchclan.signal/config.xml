<?xml version='1.0' encoding='utf-8'?>
<widget id="com.glitchclan.signalmap" version="0.0.49a-release" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GLiTCH - Signal</name>
    <description>
        A Signal Strength Map app created by GLiTCH Clan for SIH 2020 [ALPHA]
    </description>
    <author email="achint.bhatnagar2@gmail.com" href="http://cordova.io">
        GLiTCH! Clan - SIH2020
    </author>

    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <platform name="android">
        <allow-intent href="market:*" />
        <uses-permission name="android.permission.READ_PHONE_STATE" />
        <uses-permission name="android.permission.ACCESS_NETWORK_STATE" />
        <uses-permission name="android.permission.ACCESS_WIFI_STATE" />
        <uses-permission name="android.permission.ACCESS_COARSE_LOCATION" />
        <uses-permission name="android.permission.ACCESS_FINE_LOCATION" />
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <preference name="fullscreen" value="false" />
    <preference name="android-windowSoftInputMode" value="adjustPan" />
    <plugin name="cordova-plugin-signal-strength" version="1.0.0" />
    <plugin name="cordova-plugin-geolocation" version="1.0.0" />
    <plugin name="cordova-plugin-network-information" version="1.0.0" />
    <plugin name="cordova-plugin-sim" version="1.3.3" />
</widget>
